<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ColorApp.MainPage"
             BackgroundColor="Black"
             x:Name="cPage">

    <VerticalStackLayout Margin="80"
                         Spacing="15"
                         WidthRequest="500">
        <Image Source="csforar_logo.png" 
               WidthRequest="300"/>
        
        <Label Text="Hello,World!"
               TextColor="White"
               FontSize="40"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center"/>
        
        <Label Text="Welcome to my COLOR APP!"
               TextColor="White"
               HorizontalTextAlignment="Center"/>
        
        <Button Text="Click: Magenta"
                Clicked="MagentaClicked"
                BackgroundColor="Magenta"
                TextColor="White"/>
        
        <Button Text="Click: Orange"
                Clicked="OrangeClicked"
                BackgroundColor="Orange"
                TextColor="White"/>
        
        <Button Text="RESET"
                Clicked="ResetClicked"
                BackgroundColor="Black"
                TextColor="White"/>
        
    </VerticalStackLayout>
 
</ContentPage>
